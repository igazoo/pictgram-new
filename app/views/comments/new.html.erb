<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content%>
            
          </div>

          <%= f.hidden_field :topic_id, :value => params[:topic_id]%>  
          
          <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>